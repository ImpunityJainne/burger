<div class="container"></div>

    <div class="jumbotron">
        <h1>B is for Burger</h1>
    </div>

    <div class="row"> {{!-- non-devourd and devoured burgers --}}

        <div class="col-6"> {{!-- left column division --}}

            <h2>Eat Da Burger</h2>

            <ul>
                {{#each burgers}} 
                    {{#unless devoured}}
                        {{> burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>

        </div> {{!-- end of left column division --}}

        <div class="col-6"> {{!-- right column division --}}

            <h2>Nom nom nommed!</h2>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>

        </div> {{!-- end of right column division --}}

    </div>  {{!-- end of row: non-devourd and devoured burgers --}}

    <div class="row"> {{!-- add burger row --}}

        <h2>Feed a burger to Burger Monster</h2>

        <form class="create-form">

            <div class="form-group">
                <label for="newBurger">Type in your burger:</label>
                <input type="text" id="newBurger" name="name">
            </div>

            <button type="submit">Add Da Burger</button>

        </form>

    </div> {{!-- end of add burger row --}}

</div> {{!-- end of container div --}}